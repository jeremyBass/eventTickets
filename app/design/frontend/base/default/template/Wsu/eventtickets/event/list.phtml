				<?php echo "<br/>Entry Fee: ".Mage::helper('core')->currency($eventticketsItem->getEntryFee()); ?>
            </div>

            <?php if ($imageUrl = $this->getImageUrl($eventticketsItem, 100)): ?>
               <p><img src="<?php echo $imageUrl ?>" alt="<?php echo $this->escapeHtml($eventticketsItem->getTitle()); ?>" /></p>
            <?php endif; ?>
			
        </div>
    <?php endforeach; ?>
</div>

