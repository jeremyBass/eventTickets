            <h2>
                <a href="<?php echo $this->getItemUrl($eventticketsItem) ?>">
                    <?php echo $this->escapeHtml($eventticketsItem->getTitle()) ?>
                </a>
            </h2>
            <div class="eventtickets_item_subtitle">
                <?php echo $this->formatDate($eventticketsItem->getTimePublished(), 'medium') ?> 
