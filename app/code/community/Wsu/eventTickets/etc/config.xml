<config>
    <modules>
        <Wsu_eventTickets>
            <version>1.0.1</version>
        </Wsu_eventTickets>
    </modules>
    <global>
        <models>
            <wsu_eventtickets>
                <class>Wsu_eventTickets_Model</class>
                <resourceModel>eventtickets_resource</resourceModel>
            </wsu_eventtickets>
            <eventtickets_resource>
                <class>Wsu_eventTickets_Model_Resource</class>
                <entities>
                    <eventtickets>
                        <table>wsu_eventtickets</table>
                    </eventtickets>
                </entities>
            </eventtickets_resource>
        </models>
        <helpers>
            <wsu_eventtickets>
                <class>Wsu_eventTickets_Helper</class>
            </wsu_eventtickets>
        </helpers>
        <blocks>
            <wsu_eventtickets>
                <class>Wsu_eventTickets_Block</class>
            </wsu_eventtickets>
        </blocks>
        <resources>
            <wsu_eventtickets_setup>
                <setup>
                    <module>Wsu_eventTickets</module>
                    <class>Mage_Core_Model_Resource_Setup</class>
                </setup>
            </wsu_eventtickets_setup>
        </resources>
        <eventtickets>
            <before_eventtickets_item_display>
                <observers>
                    <wsu_eventtickets>
                        <class>wsu_eventtickets/observer</class>
                        <method>beforeeventTicketsDisplayed</method>
                    </wsu_eventtickets>
                </observers>
            </before_eventtickets_item_display>
        </eventtickets>
        <catalog>
            <product>
                <type>
                    <seating translate="label" module="wsu_eventtickets">
                        <label>Seating</label>
                        <model>wsu_eventtickets/product_type</model>
                        <is_qty>0</is_qty>
                        <composite>0</composite>
                        <can_use_qty_decimals>0</can_use_qty_decimals>
                    </seating>
                    <event translate="label" module="wsu_eventtickets">
                        <label>Event</label>
                        <model>wsu_eventtickets/product_type_grouped</model>
						<price_model>catalog/product_type_grouped_price</price_model>
						<composite>1</composite>
						<allow_product_types>
							<seating/>
							<simple/>
							<virtual/>
						</allow_product_types>
						<index_priority>50</index_priority>
						<price_indexer>catalog/product_indexer_price_grouped</price_indexer>
                    </event>
                </type>
            </product>
        </catalog>
    </global>
    <frontend>
        <routers>
            <wsu_eventtickets>
                <use>standard</use>
                <args>
                    <module>Wsu_eventTickets</module>
                    <frontName>eventtickets</frontName>
                </args>
            </wsu_eventtickets>
        </routers>
        <layout>
            <updates>
                <wsu_eventtickets>
                    <file>wsu_eventtickets.xml</file>
                </wsu_eventtickets>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Wsu_eventTickets before="Mage_Adminhtml">Wsu_eventTickets_Adminhtml</Wsu_eventTickets>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <wsu_eventtickets>
                    <file>wsu_eventtickets.xml</file>
                </wsu_eventtickets>
            </updates>
        </layout>
    </adminhtml>
    <default>
        <eventtickets>
            <view>
                <enabled>1</enabled>
                <items_per_page>10</items_per_page>
                <days_difference>3</days_difference>
            </view>
        </eventtickets>
    </default>
</config>
